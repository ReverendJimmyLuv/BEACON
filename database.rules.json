{
  "rules": {
    "active-beacons": {
      ".read": true
    },
    "beFoundBeacons": {
      ".read": true,
      ".write": true
    },
    "users": {
      "userReadable": {
        "$type": {
          "$uid": {
            ".read": "auth.uid === $uid",
            ".write": "root.child('/users/userWriteable').exists()"
          }
        }
      },
      "userWriteable":{
        "$type": {
          "$uid": {
            ".write": "auth.uid === $uid"
          }
        }
      }
    }
  }
}